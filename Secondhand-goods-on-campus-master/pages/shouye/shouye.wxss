/*切换栏*/
.swiper-tab {
  height: 50px;
  line-height: 50px;
  background: #f5e4e4;
  color: #333;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  /* border-bottom:1px solid rgb(180, 176, 176); */
} 
.swiper-tab-list {
  margin: 0 8px;
  font-size: 15px;
}
.on {
  font-size: 36rpx;
  color: rgb(216, 27, 27);
}
 
.hot-box{
  height: 100%;
}
/*订单列表*/
.search-list{
  border-bottom: 3rpx solid #e6e6e6;

  width: 100%;
}
.movie-wrapper {
  padding: 0 30rpx;
  border-bottom: 1px solid #e9e9e9;
  box-sizing: border-box;
}
.movie-content {
  display: flex;
  flex-direction: row;
  /* align-items: stretch; */
  margin-top: 34rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
}
.movie-content .poster {
  width: 180rpx;
  height: 180rpx;
}
.movie-content .poster image{
  width: 100%;
  height: 100%;
}
.total {
  margin-top:6rpx;
  margin-bottom: 20rpx;
  margin-left: 50rpx;
  display: flex;
  flex-direction: column;
  width: 70%;
  justify-content: space-around;
}
.name {
  color: #4a4a4a;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.desc {
  font-size: 28rpx;
  color: #4a4a4a;
    
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.price {
     font-size: 32rpx;
    color: #f40;
    font-weight: 300;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.bottom {
   color: #666;
  text-align: center;
  font-size: 30rpx;
}
