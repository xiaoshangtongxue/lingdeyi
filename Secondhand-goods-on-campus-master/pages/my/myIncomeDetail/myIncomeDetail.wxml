<view class="big">
  <view class="kong"></view>
  <view class="one" > {{orderFormInf.GoodsStatus}}({{orderFormInf.accountStatus}})</view>
  <view class="three">
    <view wx:if="{{orderFormInf.imgArr<=0}}"  class="productImg">
      <image src="/images/kong.jpg" background-size="cover"></image>
    </view>
    <view wx:else class="productImg">
      <image  src="{{orderFormInf.imgArr[0]}}" background-size="cover"></image>
    </view>
    <view class="threeRight">
      <view class="threeRight1">物品名称：{{orderFormInf['GoodsName']}}</view>
      <view class="threeRight2">
        <text>购买时间：{{orderFormInf['BuyTime']}}</text>
      </view>
      <view class="threeRight4">价格：￥{{orderFormInf['GoodsPrice']}}</view>
    </view>
  </view>
  <view class="five">
    <view class="five1">订单人信息</view>
    <view class="five2">
      <view class="five21">
        <text class="five2_1">姓名</text>
        <text class="five2_2">{{orderFormInf['Buynickname']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">联系方式</text>
        <text class="five2_2">{{orderFormInf['Buypnone']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">收货地址</text>
        <text class="five2_2">{{orderFormInf['address']}}</text>
      </view>
    </view>
    <view class="five1">订单信息</view>
    <view class="five2">
      <view class="five21">
        <text class="five2_1">物品名称</text>
        <text class="five2_2">{{orderFormInf['GoodsName']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">物品成色</text>
        <text class="five2_2">{{orderFormInf['GoodsConditions']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">校区</text>
        <text class="five2_2">{{orderFormInf['GoodsCampus']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">卖家姓名</text>
        <text class="five2_2">{{orderFormInf['nickName']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">联系方式</text>
        <text class="five2_2">{{orderFormInf['GoodsWay']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">订单号</text>
        <text class="five2_2">{{orderFormInf['orderNo']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">支付单号</text>
        <text class="five2_2">{{orderFormInf['orderCode']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">发布日期</text>
        <text class="five2_2">{{orderFormInf['time']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">下单日期</text>
        <text class="five2_2">{{orderFormInf['BuyTime']}}</text>
      </view>
      <view class="five21" wx:if="{{orderFormInf['givetime']}}">
        <text class="five2_1">送达日期</text>
        <text class="five2_2">{{orderFormInf['givetime']}}</text>
      </view>
      <view class="five21">
        <text class="five2_1">支付方式</text>
        <text class="five2_2">微信支付</text>
      </view>
      <view class="five21">
        <text class="five2_1">订单总额</text>
        <text class="five2_2">￥{{orderFormInf['GoodsPrice']}}</text>
      </view>
    </view>   
  </view>
<view class="kong1"></view>
<view class="seven" wx:if="{{orderFormInf.GoodsStatus=='未送达'&&orderFormInf.status=='已售'}}">
  <view class="seven1" bindtap="_contacthotel">联系买家</view>
</view>
<view class="seven" wx:if="{{orderFormInf.GoodsStatus=='已送达'&&orderFormInf.account==false}}">
  <view class="seven1" bindtap="_contacthotelPlat">联系平台</view>
</view>
</view>
<view class="mask" hidden="{{contactHotel}}" bindtap="changeShowStatus">
  <view class="contactHotel">
    <view class="item" bindtap="copyPhone">复制联系方式</view>
  </view>
</view>

