<van-tabs animated swipeable='ture' bind:click="onClick">
  <van-tab title="未到账">
    <scroll-view  scroll-top="{{ scrollTop }}"  scroll-y="true" style="height: 100%;">
      <view  class="orderDetails" wx:for="{{alreadyPayment}}" >
          <view class="orderListTitle">
            <text class="userName">校园-跳蚤市场</text>
           <text class="orderStatus">{{item.status}}({{item.GoodsStatus}})</text>
           </view>
          <view class="orderListDetails" bindtap="alreadyPaymentDetail" wx:key="index"  id="{{index}}">
            <view wx:if="{{item.imgArr<=0}}"  class="productImg">
              <image src="/images/kong.jpg" background-size="cover"></image>
            </view>
            <view wx:else class="productImg">
              <image  src="{{item.imgArr[0]}}" background-size="cover"></image>
            </view>
            <view class="productInfo">
              <view class="productQuantity">名称： {{item['GoodsName']}}</view>
              <view class="productQuantity">订单号： {{item['orderNo']}}</view>
             <view class="productDate">物品送达时间： {{item['givetime']}}</view>
            </view>
          </view>
          <view class="productCount">
            <view class="productCount1">
            <view wx:if="{{item.GoodsStatus=='未送达'}}">
             <text>价格：￥{{item['GoodsPrice']}}</text>
             <text class="refMon"  bindtap="refMon" id="{{index}}">联系买家</text>
            </view>
            <view wx:if="{{item.GoodsStatus=='已送达'}}">
              <text>价格：￥{{item['GoodsPrice']}}</text>
              <text class="refMon"  bindtap="refMon1" >联系平台</text>
            </view>
          </view>
          </view> 
      </view>   
    </scroll-view>
  </van-tab>
  <van-tab title="已到账">
    <scroll-view  scroll-top="{{ scrollTop }}"  scroll-y="true" style="height: 100%;">
      <view  class="orderDetails" wx:for="{{waitGoods}}">
          <view class="orderListTitle">
            <text class="userName">校园-跳蚤市场</text>
           <text class="orderStatus">{{item.status}}({{item.GoodsStatus}})</text>
           </view>
          <view class="orderListDetails" bindtap="waitGoodsDetail" wx:key="index"  id="{{index}}">
            <view wx:if="{{item.imgArr<=0}}"  class="productImg">
              <image src="/images/kong.jpg" background-size="cover"></image>
            </view>
            <view wx:else class="productImg">
              <image  src="../../../images/logo.png" background-size="cover"></image>
            </view>
            <view class="productInfo">
              <view class="productQuantity">名称： {{item['GoodsName']}}</view>
              <view class="productQuantity">订单号： {{item['orderNo']}}</view>
             <view class="productDate">物品送达时间： {{item['givetime']}}</view>
          </view>
          </view>
          <view class="productCount">
            <view class="productCount1">
             <text>价格：￥{{item['GoodsPrice']}}</text>
          </view>
          </view>
      </view>   
    </scroll-view>
  </van-tab>

</van-tabs>

<view class="mask" hidden="{{contactHotel}}" bindtap="changeShowStatus">
  <view class="contactHotel">
    <view class="item">复制联系方式</view>
  </view>
</view>