    <!-- <text class='cart-allSelect'>共{{moneyNum}}件</text> -->
    <!-- <text class='cart-allSelect'>共{{moneyNum}}件</text> -->
    <!-- 总价 -->
    <text class='cart-allPrice'>合计:</text>
    <text class='allPrice'>￥{{totalPrice}}</text>
    <button class='btn-red' bindtap='tosubmit' form-type='submit'>提交订单</button>
  </view>
</view>

