    <view class="school dis-flex b-f b-b" style="border:none;z-index: 10;">
    <view bindtap="switchSortType" data-type="sales" style="margin-top: -9px;" class="flex-box t-c p-r" data-index="1" id="list-{{sortType==='sales'?true:0}}">
      <view  class='list-msg2' bindtap='bindShowMsg'>
        <text   style="font-size: large;">{{school}}</text>
        <!-- <image style='height:20rpx;width:20rpx;' src='/images/down.png'></image> -->
      </view>
      <view class="select_box"  wx:if="{{select}}">
        <view class="select_one"  bindtap="mySelect" data-name="坞城校区">坞城校区</view>
        <view class="select_one" bindtap="mySelect" data-name="东山校区">东山校区</view>
        <view class="select_one" bindtap="mySelect" data-name="大东关校区">大东关校区</view>
    </view>
      </view>

    </view>

  <view   class="cate-content dis-flex" wx:if="{{ screenArray.length > 0 }}">
  
  <!-- 左侧 一级分类 -->

  <scroll-view class="cate-left f-28" scroll-y="{{ true }}" style="height: {{scrollHeight}}px;">
      <text bindtap="navbarTap" style="margin-top: 20px;" class="type-nav onelist-hidden {{curNav==index ? 'selected' : ''}}" data-index="{{index}}" wx:for="{{screenArray}}" wx:key="unique">{{item}}</text>
    </scroll-view>
    <!-- 右侧 二级分类 -->
    <scroll-view  class="cate-right b-f"  scroll-top="{{ scrollTop }}" scroll-y="true" style="height: {{ scrollHeight }}px;">
      <view   wx:if="{{childrenArray}}">
        <view class="cate-right-cont">
          <view class="cate-two-box">
            <view class="cate-cont-box">
              <view class="flex-three"  wx:for="{{childrenArray}}" wx:key="cit">
                      <view   class="product_item" data-id='{{item._id}}' bindtap='toGoodsDetail'>
                        <view wx:if="{{item.imgArr.length > 0}}"> 
                         <image src="{{item.imgArr[0]}}" class="image"></image>
                        </view>
                        <view wx:else > 
                         <image src="../../../images/kong.jpg" class="image"></image>
                        </view>
                        <view class="product_num">
                          <text class="change" style="font-size:35rpx; top: 16px;position: absolute;">{{item.GoodsName}}</text>
                          <view style="margin-top: 32px;">
                          <!-- <text class="textDesign" style="margin-top: 23px;"  >发布人:{{item.nickName}}</text> -->
                          <text class=" grey-color" style="position: absolute; margin-top: 10px;">价格 | {{item.GoodsPrice}}元</text> 
                          </view>
      
                          <text class="grey-color-num" style="position: absolute;top: 60px;">库存:<text style="display:inline; color:#ff5801;">{{item.GoodsNum}}</text>件</text>  
                          <view style="position: absolute;top: 75px;left:5px">
                            <van-tag  round class = "position: absolute;top: 80px;" type="danger">{{item.GoodsConditions}}</van-tag>
                            <van-tag  round type="danger">{{item.GoodsCampus}}</van-tag>       
                          </view>
                 
                        </view>
                      </view>
                  </view>
                  <!-- <view wx:if="{{!list[curIndex].childrens.length}}" class="xiaoxiangshop-notcont" >
                      <view class="img" style="margin-left: -70px;" >
                        <image mode="aspectFit" src="../../../images/tabBar/no_content.png"></image>
                      </view>
                      <text class="cont">亲, 没有相关内容</text>
                    </view> -->
              </view>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view wx:if="{{ !list.length && notcont }}">
    <view class="xiaoxiangshop-notcont">
      <text class="iconfont icon-wushuju"></text>
      <text class="cont">亲，暂无商品分类哦</text>
    </view>
  </view>

