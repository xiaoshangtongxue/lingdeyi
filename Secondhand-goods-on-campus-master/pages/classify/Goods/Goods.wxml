<view>
  <view class="searchCount" tyle="margin: 10px 0;" bindtap="searchDetail">
      <view style="height:20rpx"></view>
      <view class="searchCenter">
          <icon class="text-center" color="rgba(0,0,0,0.4)" size="15" type="search"></icon>
          <text class="text-text">搜索物品关键词</text>
      </view>
