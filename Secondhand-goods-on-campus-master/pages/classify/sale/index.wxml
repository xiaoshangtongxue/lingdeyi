    <view wx:if ="{{!item.isptjob}}">
      <van-card 
            tag="{{item.Package_no}}"
            desc="主营:{{item.Package_detail}}"
            title="{{item.Package_name}}"
            thumb="{{item.imgArr[0]}}"
            thumb-link="/pages/classify/saleDetail/saleDetail?id={{item._id}}"
      />
    </view>
    <view wx:else>
      <navigator  class="product_item" url="../show/show?id={{item._id}}&ptopenId={{item._openid}}">
                        <image src="../../../images/logo.png" class="product_image"></image>
                        <view class="product_num">
                          <text style="font-size:35rpx; top: 16px;position: absolute;font-weight: 600;">{{item.ptplaceSelect}}</text>
                          <view style="margin-top: 32px;">
                 
                          <text class=" grey-color" style="position: absolute; margin-top: 10px;">费用 | {{item.ptservePrice}}元</text> 
                          </view>
                            <text class="grey-color" style="position: absolute;top: 60px;">送达时间:{{item.ptjobTime}}</text>                  
                        </view>
                      </navigator>
    </view>
</view>
  </view>
    </view>
